<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.anaralith.freerunning.view.RunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_display_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:orientation="horizontal"
            android:rowCount="6"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Distance" />

            <TextView
                android:id="@+id/tv_display_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/tv_temps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Temps" />

            <TextView
                android:id="@+id/tv_display_temps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_vitesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="Vitesse" />

            <TextView
                android:id="@+id/tv_display_vitesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_rythme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rythme" />

            <TextView
                android:id="@+id/tv_display_rythme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_denivelePositif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denivelé Positif" />

            <TextView
                android:id="@+id/tv_display_deniv_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_deniveleNegatif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denivelé Negatif" />

            <TextView
                android:id="@+id/tv_display_deniv_negatif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="visible" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</FrameLayout>
